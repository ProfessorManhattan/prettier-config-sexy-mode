{
  "private": false,
  "name": "@megabytelabs/prettier-config",
  "version": "1.0.0",
  "description": "Prettier configuration shared by Megabyte Labs projects",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"index.js\" --write",
    "info": "npm-scripts-info",
    "postinstall": "husky install",
    "prepare-release": "run-s reset test version",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "test": "run-s build test:*",
    "test:prettier": "prettier \"index.js\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/**/*.md,.gitlab/**/*.md,index.js}\"",
    "version": "standard-version --no-verify"
  },
  "scripts-info": {
    "commit": "Automatically fix errors and guides you through the commit process",
    "fix": "Try to automatically fix any linting and formatting issues",
    "info": "Display information about the package scripts",
    "prepare-release": "Ensure project passes linting tests and then prepare a release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "test": "Lint the project",
    "version": "Bump package.json version, update CHANGELOG.md, tag release"
  },
  "devDependencies": {
    "cspell": "^5.3.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^5.1.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "npm-scripts-info": "^0.3.9",
    "prettier": "^2.1.1",
    "prettier-package-json": "^2.1.3",
    "standard-version": "^9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/megabyte-space/npm/prettier-config.git"
  },
  "engines": {
    "node": ">=10"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "prettier",
    "configuration",
    "config",
    "autoformat"
  ],
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 120,
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "author": "Brian Zalewski <help@megabyte.space> (https://megabyte.space)",
  "license": "MIT",
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-space/npm/prettier-config/-/issues"
  },
  "homepage": "https://gitlab.com/megabyte-space/npm/prettier-config",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
